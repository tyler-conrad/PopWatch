#:import Palette util.Palette
#:import AppLayout util.AppLayout
#:import HamburgerButton uix.hamburger_button.HamburgerButton

<MenuBar>:
    id: menu_bar
    size_hint: 1.0, None
    height: dp(AppLayout.menu_bar_size)

    canvas:
        Color:
            rgba: Palette.gray
        Rectangle:
            size: self.size

    Label:
        text: 'PopWatch'
        pos_hint: {'center': (0.5, 0.5)}
        font_size: '36.0dp'
        color: Palette.black

    HamburgerButton:
        pos_hint: {'right': 1.0, 'y': 0.0}
        size_hint: None, 1.0
        width: menu_bar.height